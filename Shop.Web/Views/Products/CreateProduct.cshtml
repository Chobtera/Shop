@model Shop.Web.Models.Product

<h2>Create a new Product</h2>

<form asp-action="CreateProduct">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Price" class="form-control"></textarea>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="ImageURL" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="ImageURL" class="form-control"></textarea>
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Stock" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Stock" class="form-control"></textarea>
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="CategoryId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="CategoryId" class="form-control"></textarea>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group" style="padding-top: 10px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</form>
